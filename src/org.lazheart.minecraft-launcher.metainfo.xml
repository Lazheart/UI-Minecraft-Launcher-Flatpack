<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.lazheart.minecraft-launcher</id>
  <name>Minecraft Bedrock Launcher</name>
  <summary>Lanzador no oficial de Minecraft Bedrock Edition en Linux</summary>

  <description>
    <p>
      Launcher no oficial para Minecraft Bedrock Edition que permite instalar , jugar y manejar disintintas versiones del juego en sistemas Linux de manera sencilla.
    </p>

  </description>

  <!-- licencia obligatoria -->
  <metadata_license>MIT</metadata_license>

  <!-- Información del desarrollador -->
  <developer_name>Lazheart</developer_name>

  <!-- Archivo .desktop asociado -->
  <launchable type="desktop-id">org.lazheart.minecraft-launcher.desktop</launchable>

  <!-- Binario que provee -->
  <provides>
    <binary>minecraft-launcher</binary>
  </provides>

  <!-- Página principal del proyecto -->
  <url type="homepage">https://github.com/Lazheart/Minecraft-Launcher-Bedrock-in-FlatPack</url>

  <!-- Iconos incluidos -->
  <icon type="stock">org.lazheart.minecraft-launcher</icon>

  <!-- Categorías para el menú de aplicaciones -->
  <categories>
    <category>Game</category>
    <category>Utility</category>
  </categories>

</component>